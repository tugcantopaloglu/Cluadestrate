# Cluadestrate Backend Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Claude Code Configuration
# Path to the Claude Code CLI binary (default: 'claude')
CLAUDE_BINARY_PATH=claude

# Default working directory for new sessions
DEFAULT_WORKING_DIRECTORY=

# Maximum concurrent sessions allowed
MAX_CONCURRENT_SESSIONS=10

# Anthropic API Key (optional - Claude Code may use its own auth)
# ANTHROPIC_API_KEY=sk-ant-...

# Database Configuration
# SQLite database file path
DATABASE_PATH=./data/cluadestrate.db

# Usage Tracking
# Daily token limit (0 for unlimited)
DAILY_TOKEN_LIMIT=0

# Alert thresholds (percentage)
USAGE_ALERT_WARNING=75
USAGE_ALERT_CRITICAL=90

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# Session Configuration
# Session timeout in milliseconds (default: 30 minutes)
SESSION_TIMEOUT=1800000

# Maximum output history per session (number of messages)
MAX_OUTPUT_HISTORY=1000

# MCP Server Configuration
# Default MCP servers to enable (comma-separated)
# DEFAULT_MCP_SERVERS=filesystem,git,github

# Logging
LOG_LEVEL=info
# LOG_FILE=./logs/cluadestrate.log

# Integration API Keys (optional)
# GITHUB_TOKEN=ghp_...
# SLACK_BOT_TOKEN=xoxb-...
# DISCORD_BOT_TOKEN=...
